                                            </DrawingImage.Drawing>
                                        </DrawingImage>
                                    </Image.Source>
                                </Image>
                                <hc:TextBox x:Name="txt_User" hc:InfoElement.Placeholder="Email Or Phone Number" Margin="0,20,0,0" Width="250"/>
                                <hc:PasswordBox x:Name="txt_Pass" ShowEyeButton="True" hc:InfoElement.Placeholder="Password" Margin="0,10,0,0" Width="250"/>
                                <Button x:Name="btn_Login" Background="{StaticResource PrimaryColor}" Foreground="White" BorderThickness="0" Content="Login" Margin="0,15,0,0" Width="250" Click="btn_Login_Click"/>
                            </StackPanel>
                        </Border>
                    </hc:UniformSpacingPanel>
                </hc:TransitioningContentControl>
            </TabItem>
            <TabItem Header="Account Info" Height="30" VerticalAlignment="Top">
                <hc:TransitioningContentControl TransitionMode="Left2RightWithFade">

                    <hc:ScrollViewer>
                        <control:AccInfo x:Name="control_AccInfo"/>
                    </hc:ScrollViewer>
                </hc:TransitioningContentControl>
            </TabItem>
            <TabItem Header="Order History">
                <hc:TransitioningContentControl TransitionMode="Left2RightWithFade">

                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="89"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Margin="0,0,0,5">

                            <Border Padding="10" BorderThickness="1.5" BorderBrush="#eee" CornerRadius="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0">
                                        <hc:UniformSpacingPanel Spacing="5" Orientation="Vertical">
                                            <Image Height="40">
                                                <Image.Source>
                                                    <DrawingImage>
                                                        <DrawingImage.Drawing>
                                                            <GeometryDrawing Brush="{StaticResource PrimaryColor}" Geometry="M16,14H17.5V16.82L19.94,18.23L19.19,19.53L16,17.69V14M17,12A5,5 0 0,0 12,17A5,5 0 0,0 17,22A5,5 0 0,0 22,17A5,5 0 0,0 17,12M17,10A7,7 0 0,1 24,17A7,7 0 0,1 17,24C14.21,24 11.8,22.36 10.67,20H1V17C1,14.34 6.33,13 9,13C9.6,13 10.34,13.07 11.12,13.2C12.36,11.28 14.53,10 17,10M10,17C10,16.3 10.1,15.62 10.29,15C9.87,14.93 9.43,14.9 9,14.9C6.03,14.9 2.9,16.36 2.9,17V18.1H10.09C10.03,17.74 10,17.37 10,17M9,4A4,4 0 0,1 13,8A4,4 0 0,1 9,12A4,4 0 0,1 5,8A4,4 0 0,1 9,4M9,5.9A2.1,2.1 0 0,0 6.9,8A2.1,2.1 0 0,0 9,10.1A2.1,2.1 0 0,0 11.1,8A2.1,2.1 0 0,0 9,5.9Z" />
                                                        </DrawingImage.Drawing>
                                                    </DrawingImage>
                                                </Image.Source>
                                            </Image>
                                            <TextBlock x:Name="txt_pending" TextAlignment="Center" Foreground="{StaticResource PrimaryColor}" Text="Pending = 0"/>
                                        </hc:UniformSpacingPanel>
                                    </Grid>
                                    <Grid Grid.Column="1">
                                        <hc:UniformSpacingPanel Spacing="5" Orientation="Vertical">
                                            <Image Height="40">
                                                <Image.Source>
                                                    <DrawingImage>
                                                        <DrawingImage.Drawing>
                                                            <GeometryDrawing Brush="{StaticResource PrimaryColor}" Geometry="M13,2.03V2.05L13,4.05C17.39,4.59 20.5,8.58 19.96,12.97C19.5,16.61 16.64,19.5 13,19.93V21.93C18.5,21.38 22.5,16.5 21.95,11C21.5,6.25 17.73,2.5 13,2.03M11,2.06C9.05,2.25 7.19,3 5.67,4.26L7.1,5.74C8.22,4.84 9.57,4.26 11,4.06V2.06M4.26,5.67C3,7.19 2.25,9.04 2.05,11H4.05C4.24,9.58 4.8,8.23 5.69,7.1L4.26,5.67M2.06,13C2.26,14.96 3.03,16.81 4.27,18.33L5.69,16.9C4.81,15.77 4.24,14.42 4.06,13H2.06M7.1,18.37L5.67,19.74C7.18,21 9.04,21.79 11,22V20C9.58,19.82 8.23,19.25 7.1,18.37M12.5,7V12.25L17,14.92L16.25,16.15L11,13V7H12.5Z" />
                                                        </DrawingImage.Drawing>
                                                    </DrawingImage>
                                                </Image.Source>
                                            </Image>
                                            <TextBlock x:Name="txt_inprogress" TextAlignment="Center" Foreground="{StaticResource PrimaryColor}" Text="In Progress = 0"/>
                                        </hc:UniformSpacingPanel>
                                    </Grid>
                                    <Grid Grid.Column="2">
                                        <hc:UniformSpacingPanel Spacing="5" Orientation="Vertical">
                                            <Image Height="40">
                                                <Image.Source>
                                                    <DrawingImage>
                                                        <DrawingImage.Drawing>
                                                            <GeometryDrawing Brush="{StaticResource PrimaryColor}" Geometry="M18 18.5C18.83 18.5 19.5 17.83 19.5 17C19.5 16.17 18.83 15.5 18 15.5C17.17 15.5 16.5 16.17 16.5 17C16.5 17.83 17.17 18.5 18 18.5M19.5 9.5H17V12H21.46L19.5 9.5M6 18.5C6.83 18.5 7.5 17.83 7.5 17C7.5 16.17 6.83 15.5 6 15.5C5.17 15.5 4.5 16.17 4.5 17C4.5 17.83 5.17 18.5 6 18.5M20 8L23 12V17H21C21 18.66 19.66 20 18 20C16.34 20 15 18.66 15 17H9C9 18.66 7.66 20 6 20C4.34 20 3 18.66 3 17H1V6C1 4.89 1.89 4 3 4H17V8H20M3 6V15H3.76C4.31 14.39 5.11 14 6 14C6.89 14 7.69 14.39 8.24 15H15V6H3M10 7L13.5 10.5L10 14V11.5H5V9.5H10V7Z" />
                                                        </DrawingImage.Drawing>
                                                    </DrawingImage>
                                                </Image.Source>
                                            </Image>
                                            <TextBlock x:Name="txt_sent" TextAlignment="Center" Foreground="{StaticResource PrimaryColor}" Text="Sent = 0"/>
                                        </hc:UniformSpacingPanel>
                                    </Grid>
                                    <Grid Grid.Column="3">
                                        <hc:UniformSpacingPanel Spacing="5" Orientation="Vertical">
                                            <Image Height="40">
                                                <Image.Source>
                                                    <DrawingImage>
                                                        <DrawingImage.Drawing>
                                                            <GeometryDrawing Brush="{StaticResource PrimaryColor}" Geometry="M14.5 11C14.78 11 15 11.22 15 11.5V13H9V11.5C9 11.22 9.22 11 9.5 11H14.5M18.5 12C19 12 19.5 12.07 20 12.18V10H18V12.03C18.17 12 18.33 12 18.5 12M6 19V10H4V21H12.5C12.24 20.38 12.09 19.7 12.03 19H6M21 9H3V3H21V9M19 5H5V7H19V5M23 18.5C23 21 21 23 18.5 23S14 21 14 18.5 16 14 18.5 14 23 16 23 18.5M20 21.08L15.92 17C15.65 17.42 15.5 17.94 15.5 18.5C15.5 20.16 16.84 21.5 18.5 21.5C19.06 21.5 19.58 21.35 20 21.08M21.5 18.5C21.5 16.84 20.16 15.5 18.5 15.5C17.94 15.5 17.42 15.65 17 15.92L21.08 20C21.35 19.58 21.5 19.06 21.5 18.5Z" />
                                                        </DrawingImage.Drawing>
                                                    </DrawingImage>
                                                </Image.Source>
                                            </Image>
                                            <TextBlock x:Name="txt_cancel" TextAlignment="Center" Foreground="{StaticResource PrimaryColor}" Text="Cancelled = 0"/>
                                        </hc:UniformSpacingPanel>
                                    </Grid>
                                </Grid>
                            </Border>
                        </Grid>
                        <Grid Grid.Row="1">
                            <DataGrid x:Name="DG" HeadersVisibility="All" RowHeaderWidth="100" AutoGenerateColumns="False" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" ColumnWidth="*" hc:DataGridAttach.ShowRowNumber="True" hc:ScrollViewer.IsInertiaEnabled="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Binding="{Binding Order_id}" Header="Order id"/>
                                    <DataGridTextColumn Binding="{Binding Cart_id}" Header="Cart id"/>
                                    <DataGridTextColumn Binding="{Binding Created_at}" Header="Created at"/>
                                    <DataGridTextColumn Binding="{Binding Payable_price}" Header="Payable price"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Grid>
                </hc:TransitioningContentControl>
            </TabItem>
            <TabItem Header="Order Chart">
                <hc:TransitioningContentControl TransitionMode="Left2RightWithFade">
                    <Border Margin="20" Padding="10" BorderThickness="1.5" BorderBrush="#eee" CornerRadius="8">
                        <lvc:CartesianChart Background="White" x:Name="Order_Chart" Series="{Binding SeriesCollection}" >
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis MinValue="0" LabelFormatter="{Binding YFormatter}"></lvc:Axis>
                            </lvc:CartesianChart.AxisY>
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis Labels="{Binding XFormatter}"></lvc:Axis>
                            </lvc:CartesianChart.AxisX>
                        </lvc:CartesianChart>
                    </Border>
                </hc:TransitioningContentControl>
            </TabItem>
            <TabItem Header="Export Data">
                <hc:TransitioningContentControl TransitionMode="Left2RightWithFade">
                    <hc:ScrollViewer IsInertiaEnabled="True" hc:ScrollViewerAttach.AutoHide="False">
                        <hc:UniformSpacingPanel Margin="20" Spacing="5" Orientation="Vertical">
                            <Border Padding="10" Height="84" BorderThickness="1.5" BorderBrush="#eee" CornerRadius="8">
                                <Image>
                                    <Image.Source>
                                        <DrawingImage>
                                            <DrawingImage.Drawing>
                                                <GeometryDrawing Brush="{StaticResource PrimaryColor}" Geometry="M13 17H17V14L22 18.5L17 23V20H13V17M14 12.8C13.5 12.31 12.78 12 12 12C10.34 12 9 13.34 9 15C9 16.31 9.84 17.41 11 17.82C11.07 15.67 12.27 13.8 14 12.8M11.09 19H5V5H16.17L19 7.83V12.35C19.75 12.61 20.42 13 21 13.54V7L17 3H5C3.89 3 3 3.9 3 5V19C3 20.1 3.89 21 5 21H11.81C11.46 20.39 11.21 19.72 11.09 19M6 10H15V6H6V10Z" />
                                            </DrawingImage.Drawing>
                                        </DrawingImage>
                                    </Image.Source>
                                </Image>
                            </Border>
                            <GroupBox Header="Export Order History" Padding="10" Style="{StaticResource GroupBoxTab}">
                                <Border Background="{DynamicResource RegionBrush}" CornerRadius="4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Button Margin="20,20,10,20" HorizontalAlignment="Stretch" Grid.Column="0" x:Name="btn_savecsv" Background="{StaticResource PrimaryColor}" Foreground="White" BorderThickness="0" Content="Save as CSV" Click="btn_savecsv_Click" />
                                        <Button Margin="10,20,20,20" HorizontalAlignment="Stretch" Grid.Column="1" x:Name="btn_savetxt"  Background="{StaticResource PrimaryColor}" Foreground="White" BorderThickness="0" Content="Save as TXT" Click="btn_savetxt_Click" />
                                    </Grid>
                                </Border>
                            </GroupBox>
                            <GroupBox Header="Export Order Chart" Padding="10" Style="{StaticResource GroupBoxTab}">
                                <Border Background="{DynamicResource RegionBrush}" CornerRadius="4">
                                    <Button Margin="20,20,10,20" HorizontalAlignment="Stretch" x:Name="btn_savepng" Background="{StaticResource PrimaryColor}" Foreground="White" BorderThickness="0" Content="Save as PNG" Click="btn_savepng_Click" />
                                </Border>
                            </GroupBox>

                        </hc:UniformSpacingPanel>
                    </hc:ScrollViewer>
                </hc:TransitioningContentControl>
            </TabItem>
        </TabControl>

    </Grid>
</Window>